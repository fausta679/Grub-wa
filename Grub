    <script>
        // Animasi sederhana untuk member count
        setInterval(() => {
            const memberCount = document.querySelector('.member-count span');
            const randomNum = Math.floor(Math.random() * 30) + 15;
            memberCount.textContent = `üî• ${randomNum}+ anggota online`;
        }, 10000);

        // Alert ketika mengklik tombol gabung
        document.querySelector('.join-button').addEventListener('click', function(e) {
            const confirmJoin = confirm('Anda akan diarahkan ke grup WhatsApp. Lanjutkan?');
            if (!confirmJoin) {
                e.preventDefault();
            }
        });

        // Efek hover pada info items
        const infoItems = document.querySelectorAll('.info-item');
        infoItems.forEach(item => {
            item.addEventListener('mouseenter', function() {
                this.style.transform = 'translateX(5px)';
                this.style.transition = 'all 0.3s ease';
            });
            item.addEventListener('mouseleave', function() {
                this.style.transform = 'translateX(0)';
            });
        });
    </script>
